<h1>Users</h1>

<% @users.each do |user| %>
    <div>
        <h2><%= link_to user.username, user %></h2>
        <p><%= user.email %></p>
        <p><%= pluralize(user.articles.count, "article") %> created</p>
        <p>Joined <%= time_ago_in_words(user.created_at) %> ago</p>
        <div>
            <a><%= link_to 'View Profile', user %></a>
            <% if logged_in? && user == current_user %> |
                <a><%= link_to 'Edit User', edit_user_path(user) %></a> | 
                <a><%= link_to 'Delete User', user_path(user), 
                                                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></a>
            <% end %>
        </div>
    </div>
    <hr>
<% end %>