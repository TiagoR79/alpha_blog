<div>
    <div class="row justify-content-center text-center bg-dark p-2">
        <h1 class="text-light text-opacity-75"><%= @user.username %> Profile</h1>
        <h1 class="text-light text-opacity-50"><%= @user.username %> Profile</h1>
        <h1 class="text-light text-opacity-25"><%= @user.username %> Profile</h1>
    </div>
    <div class="row justify-content-center text-center bg-dark p-3">
        <h2 class="text-light text-opacity-75">Articles</h2>
    </div>
</div>



<%= render 'articles/article' %>

<div class="bg-dark p-2 d-flex justify-content-center">
    <% if logged_in? && @user == current_user %>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-light m-2" %>
        <%= link_to 'DELETE ACCOUNT', user_path(current_user), class: "btn btn-light m-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
</div>