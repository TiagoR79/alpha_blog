<div class="container">
	<div class="row justify-content-center p-2">
		<div class="col-10">
			<%= render 'shared/errors', obj: @user %>
			<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
			<%= form_with(model: @user, data: { turbo: false }, local: true) do |f| %>
				<div class="form-group p-2">
					<%= f.label :username, class: "form-label" %>
					<%= f.text_field :username, class: "form-control", placeholder: "Title of article" %>
				</div>
				
				<div class="form-group p-2">
					<%= f.label :email, class: "form-label" %>
					<%= f.text_field :email, class: "form-control", placeholder: "example@email.com" %>
				</div>
				
				<div class="form-group p-2">
					<%= f.label :password, class: "form-label" %>
					<%= f.password_field :password, class: "form-control", placeholder: "password" %>
				</div>

				<div class="form-group p-2">
					<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-info") %>
				</div>
			<% end %>
		</div>
	</div>
</div>