<% if @users.errors.any? %>
	<h2>The following errors prevented the user from being updated</h2>
		<ul>
			<% @users.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
<% end %>

<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
<%= form_with(model: @users, data: { turbo: false }, local: true) do |f| %>
	<p>
		<%= f.label :username %><br/>
		<%= f.text_field :username %>
	</p>
	
	<p>
		<%= f.label :email %><br/>
		<%= f.text_field :email %>
	</p>
    
    <p>
		<%= f.label :password %><br/>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>