<div>
    <%= link_to 'AlphaBlog', root_path %> | 
    <%= link_to 'About', about_path %> | 
    <%= link_to 'Bloggers', users_path %> | 
    <%= link_to 'Articles', articles_path %> | 
    <% if logged_in? %>
        <%= link_to 'Log out', logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%> |
        <%= link_to current_user.username, user_path(current_user) %><%= " (Admin)" if current_user.admin? %> 
    <% else %>
        <%= link_to 'Log in', login_path %> | 
        <%= link_to 'Signup', signup_path %>
    <% end %>
</div>
