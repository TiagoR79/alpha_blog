<div class="container">
	<div class="row justify-content-center p-2">
		<div class="col-10">
			<%= render 'shared/errors', obj: @article %>
			<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
			<%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
				<div class="form-group p-2">
					<%= f.label :title, class: "form-label" %>
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
				</div>
				
				<div class="form-group p-2">
					<%= f.label :description, class: "form-label" %>
					<%= f.text_area :description, class: "form-control", placeholder: "Write your toughts" %>
				</div>

				<div class="form-group p-2">
					<%= f.submit class: "btn btn-outline-info" %>
				</div>
			<% end %>
		</div>
	</div>
</div>