<% if @article.errors.any? %>
	<h2>The following errors prevented the article from being updated</h2>
		<ul>
			<% @article.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
<% end %>

<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
<%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>
	
	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>