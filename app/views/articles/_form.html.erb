<%= render 'shared/errors', obj: @article %>
<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
<%= form_with(model: @article, data: { turbo: false }, local: true) do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>
	
	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>