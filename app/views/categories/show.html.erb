
<div>
	<div class="row justify-content-center text-center bg-dark p-2">
		<h1 class="bg-dark text-light text-center p-5 m-0"><%= @category.name %></h1>	
	</div>
	<div class="row justify-content-center text-center bg-dark p-3">
			<h2 class="text-light text-opacity-75">Articles</h2>
	</div>
</div>

<div class="container">
	<%= render 'articles/article' %>
</div>

<div class="bg-dark p-2 d-flex justify-content-center">
    <% if logged_in? && current_user.admin? %>
        <%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-light m-2" %>
        <%= link_to 'DELETE', category_path(@category), class: "btn btn-light m-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <% end %>
</div>