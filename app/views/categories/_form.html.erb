<div class="container">
	<div class="row justify-content-center p-2">
		<div class="col-10">
			<%= render 'shared/errors', obj: @category %>
			<%# the data: { turbo: false }, solves the above code not displaying - serves via html and not ajax ??%>
			<%= form_with(model: @category, data: { turbo: false }, local: true) do |f| %>
				<div class="form-group p-2">
					<%= f.label :name, "Insert category name", class: "form-label" %>
					<%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
				</div>

				<div class="form-group p-2">
					<%= f.submit class: "btn btn-outline-info" %>
				</div>
			<% end %>
		</div>
	</div>
</div>